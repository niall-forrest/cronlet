{
  "name": "cronlet-cli",
  "version": "0.1.0",
  "description": "CLI for Cronlet - the simplest way to add scheduled tasks to your Node.js app",
  "type": "module",
  "bin": {
    "cronlet": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "cronlet": "workspace:*",
    "@cronlet/dashboard": "workspace:*",
    "@fastify/static": "^7.0.0",
    "commander": "^12.0.0",
    "chokidar": "^3.6.0",
    "croner": "^8.0.0",
    "fastify": "^4.26.0",
    "picocolors": "^1.0.0",
    "nanoid": "^5.0.0"
  },
  "devDependencies": {
    "@cronlet/eslint-config": "workspace:*",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "cron",
    "scheduler",
    "cli"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  }
}
